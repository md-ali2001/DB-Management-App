<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Your Content Here    -->

    <LinearLayout
        android:background="@color/teal_200"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/roll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"


            android:hint="ROLL NO."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"

            android:hint="FIRST NAME"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"

            android:hint="SECOND NAME"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"

            android:hint="D.O.B."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:onClick="register"
            android:backgroundTint="@android:color/black"
            android:textColor="@color/white"
            android:text="REGISTER"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/updateshow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:backgroundTint="@android:color/black"
            android:textColor="@color/white"
            android:onClick="updateshowfunc"
            android:text="SHOW"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/updateroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:hint="ROLL NO TO SHOW/DEL"

            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="0dp"
            />

        <Button
            android:id="@+id/delfunc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:backgroundTint="@android:color/black"
            android:textColor="@color/white"
            android:onClick="delfunc"
            android:textSize="17.5dp"
            android:text="DELETE" />

        <TextView
            android:id="@+id/data"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#3F51B5"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_weight="5" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:onClick="fetch"
            android:backgroundTint="@android:color/black"
            android:textColor="@color/white"
            android:text="FETCH CURRENT REGISTRATIONS"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView55"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <Button
            android:id="@+id/clearb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:onClick="clearf"
            android:text="CLEAR FORM"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>